# Activar mod_rewrite
RewriteEngine On

# Quitar la extensi칩n .html (Primero, para que las p치ginas HTML se gestionen)
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^([a-zA-Z0-9_-]+)$ $1.html [L]

# Quitar la extensi칩n .php (Luego, para que las p치ginas PHP se gestionen)
RewriteCond %{REQUEST_FILENAME}.php -f
